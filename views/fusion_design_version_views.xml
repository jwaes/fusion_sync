<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fusion_design_version_tree" model="ir.ui.view">
        <field name="name">fusion.design.version.tree</field>
        <field name="model">fusion.design.version</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fusion_design_id"/>
                <field name="version_number"/>
                <field name="revision_date"/>
                <field name="modified_by"/>
            </tree>
        </field>
    </record>

    <record id="view_fusion_design_version_form" model="ir.ui.view">
        <field name="name">fusion.design.version.form</field>
        <field name="model">fusion.design.version</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="fusion_design_id"/>
                        <field name="version_number"/>
                        <field name="revision_date"/>
                        <field name="modified_by"/>
                        <field name="component_version_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
